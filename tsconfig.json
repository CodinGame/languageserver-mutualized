{
  "extends": "@codingame/tsconfig",
  "compilerOptions": {
    "module": "esnext",
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "target": "ES2022",
    "lib": ["ESNext"],
    "declaration": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ]
}
